<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="chipStyle">@style/FilterMaterialCard.ChipGroup</item>
        <item name="android:windowBackground">@drawable/splash_screen_drawable</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="FilterMaterialCard.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/sansbold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="FilterMaterialCard.ChipGroup.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/sansregular</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="FilterMaterialCard.ChipGroup" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:checkable">true</item>
        <item name="chipIconVisible">true</item>
        <item name="checkedIconEnabled">true</item>
        <item name="checkedIcon">@drawable/ic_next</item>
    </style>

    <style name="ViewAll.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/playfairbold</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Article.Separator.Shape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>
